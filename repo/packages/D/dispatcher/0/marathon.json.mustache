{
  "id": "/datarhei/{{service.name}}",
  "instances": {{service.instances}},
  "cpus": {{service.cpus}},
  "mem": {{service.mem}},
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "datarhei/clab-dispatcher:latest",
      "forcePullImage": true,
      "network": "BRIDGE",    
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 0,
          "protocol": "tcp",
          "name": "http",
          "labels": {}
        }
      ]
    }
  },
  "env": {
    "HLS_ORIGIN_CPUS": "{{hls-origin.cpus}}",
    "HLS_ORIGIN_MEM": "{{hls-origin.mem}}",
    "RTMP_TRANSCODER_CPUS": "{{rtmp-transcoder.cpus}}",
    "RTMP_TRANSCODER_MEM": "{{rtmp-transcoder.mem}}"
  },
  "acceptedResourceRoles": [
    "{{service.role}}"
  ],
  "labels": {
    "DCOS_SERVICE_NAME": "/datarhei/{{service.name}}"
  }
}
