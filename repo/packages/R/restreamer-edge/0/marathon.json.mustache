    "HTTPS_CERT_CREATE": "{{https.cert_create}}",
    "HTTPS_CERT_MAIL": "{{https.cert_email}}",
    "HTTPS_CERT_DOMAIN": "{{https.cert_domain}}"
  },
  "acceptedResourceRoles": [
    "{{service.role}}"
  ],
  "labels": {
    "DCOS_SERVICE_NAME": "{{service.name}}"
  }
}
